<% layout('layouts/boilerplate') %>
<h1>Login</h1>
<form action="/login" class="validated-form" novalidate method="POST">
    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input
            class="form-control"
            type="text"
            id="username"
            name="username"
            required
        />
        <div class="valid-feedback">Looks good!</div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input
            class="form-control"
            type="password"
            id="password"
            name="password"
            required
        />
        <div class="valid-feedback">Looks good!</div>
    </div>
    <a href="/auth/google" class="btn btn-danger"> Sign in with Google </a>
    <button class="btn btn-success">Login</button>

    <div class="mt-5">
        <p>
            Don't have an account?
            <a href="/register" class="text-primary text-decoration-none"
                >Sign up</a
            >
        </p>
    </div>
</form>
