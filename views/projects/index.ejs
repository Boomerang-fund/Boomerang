<% layout('layouts/boilerplate') %>

<div id="map" style="width: 100%; height: 500px"></div>
<h1 class="mt-4">All Projects</h1>

<!-- Search Bar at the Top of Index Page -->
<div class="container mt-4 mb-4">
    <form
        action="/search"
        method="GET"
        class="form-inline d-flex justify-content-center"
    >
        <input
            type="text"
            name="keyword"
            class="form-control mr-2"
            placeholder="Search projects"
            required
        />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

<div class="mt-3 mb-4">
    <a href="/projects/new" class="btn btn-info">Add Project</a>
</div>

<!-- Project Cards Display -->
<div class="container">
    <div class="row">
        <% for (let project of projects) { %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img
                    src="<%= project.images && project.images[0] ? project.images[0].url : 'https://res.cloudinary.com/dei5hbjfg/image/upload/v1730665603/Boomerang/ujp5lxrxohzvkutf5oos.jpg' %>"
                    class="card-img-top"
                    alt="<%= project.title %>"
                />
                <div class="card-body">
                    <!-- Title and Bookmark in a Flex Container -->
                    <div
                        style="
                            display: flex;
                            justify-content: space-between;
                            align-items: center;
                        "
                    >
                        <h5 class="card-title" style="margin: 0">
                            <%= project.title %>
                        </h5>
                        <% if (currentUser) { %>
                        <form
                            action="/projects/<%= project._id %>/toggleSave"
                            method="POST"
                            style="margin: 0"
                        >
                            <button
                                type="submit"
                                class="btn btn-link p-0"
                                style="font-size: 1rem; color: #007bff"
                            >
                                <% if (currentUser.savedProjects &&
                                currentUser.savedProjects.includes(project._id.toString()))
                                { %>
                                <i class="fas fa-bookmark"></i>
                                <% } else { %>
                                <i class="far fa-bookmark"></i>
                                <% } %>
                            </button>
                        </form>
                        <% } %>
                    </div>
                    <p class="card-text"><%= project.description %></p>
                    <p class="card-text">
                        <small class="text-muted"
                            ><%= project.location %></small
                        >
                    </p>
                    <p class="card-text">
                        <% // Calculate days left until deadline const
                        deadlineDate = new Date(project.deadline); const
                        currentDate = new Date(); const timeDifference =
                        deadlineDate - currentDate; const daysLeft =
                        Math.ceil(timeDifference / (1000 * 60 * 60 * 24)); %>
                        <small class="text-muted">
                            <% if (daysLeft > 0) { %>
                            <i class="fas fa-clock"></i> <%= daysLeft %> days
                            left <% } else { %>
                            <span class="text-danger">Deadline passed</span>
                            <% } %>
                        </small>
                    </p>
                    <a
                        href="/projects/<%= project._id %>"
                        class="btn btn-primary"
                        >View</a
                    >
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

<!-- Pass Project Data to ClusterMap.js as GeoJSON -->
<script>
    const mapToken = "<%- process.env.MAPBOX_TOKEN %>";

    // Format project data as GeoJSON for map display in clusterMap.js
    const projects = {
        type: "FeatureCollection",
        features: <%- JSON.stringify(projects.map(project => ({
            type: "Feature",
            geometry: {
                type: "Point",
                coordinates: project.geometry ? project.geometry.coordinates : [0, 0] // Default to [0, 0] if no coordinates
            },
            properties: {
                title: project.title,
                description: project.description,
                popUpMarkup: `<a href="/projects/${project._id}">${project.title}</a>`, // Link to project's show page
            }
        }))) %>
    };
</script>

<!-- Script for AJAX Bookmark Toggle -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const saveIcons = document.querySelectorAll(".save-icon");

        saveIcons.forEach((icon) => {
            icon.addEventListener("click", async function (event) {
                event.preventDefault();

                const projectId = this.getAttribute("data-project-id");
                const iconElement = this.querySelector("i");

                try {
                    const response = await fetch(
                        `/projects/${projectId}/toggleSave`,
                        {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json",
                                "X-Requested-With": "XMLHttpRequest",
                            },
                        }
                    );
                    const result = await response.json();

                    // Toggle the icon based on the save status
                    if (result.status === "saved") {
                        iconElement.classList.remove("far");
                        iconElement.classList.add("fas");
                    } else if (result.status === "unsaved") {
                        iconElement.classList.remove("fas");
                        iconElement.classList.add("far");
                    }
                } catch (error) {
                    console.error("Error toggling project save:", error);
                }
            });
        });
    });
</script>

<!-- Include ClusterMap JavaScript -->
<script src="/javascripts/clusterMap.js"></script>
