<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px"></div>
<h1>All Projects</h1>
<div class="mt-3 mb-4">
    <a href="/projects/new" class="btn btn-info">Add Project</a>
</div>

<div class="container">
    <div class="row">
        <% for (let project of projects) { %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img
                    src="<%= project.images && project.images[0] ? project.images[0].url : 'https://res.cloudinary.com/dei5hbjfg/image/upload/v1730665603/Boomerang/ujp5lxrxohzvkutf5oos.jpg' %>"
                    class="card-img-top"
                    alt="..."
                />
                <div class="card-body">
                    <h5 class="card-title"><%= project.title %></h5>
                    <p class="card-text"><%= project.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= project.location%></small>
                    </p>
                    <a
                        href="/projects/<%= project._id %>"
                        class="btn btn-primary"
                        >View</a
                    >
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

<script>
    const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
    const projects = {features: <%- JSON.stringify(projects) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
