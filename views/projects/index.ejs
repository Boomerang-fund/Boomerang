<!-- Project Cards Display -->
<div class="container mt-5">
    <div class="row">
        <% const firstSixProjects = projects.slice(0, 6); %> <% const
        remainingProjects = projects.slice(6); %> <% for (let project of
        firstSixProjects) { %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img
                    src="<%= project.images && project.images[0] ? project.images[0].url : 'https://res.cloudinary.com/dei5hbjfg/image/upload/v1730665603/Boomerang/ujp5lxrxohzvkutf5oos.jpg' %>"
                    class="card-img-top"
                    alt="<%= project.title %>"
                />
                <div class="card-body">
                    <div
                        style="
                            display: flex;
                            justify-content: space-between;
                            align-items: center;
                        "
                    >
                        <h5 class="card-title" style="margin: 0">
                            <%= project.title %>
                        </h5>
                        <% if (currentUser) { %>
                        <form
                            action="/projects/<%= project._id %>/toggleSave"
                            method="POST"
                            style="margin: 0"
                        >
                            <button
                                type="submit"
                                class="btn btn-link p-0"
                                style="font-size: 1rem; color: #007bff"
                            >
                                <% if (currentUser.savedProjects &&
                                currentUser.savedProjects.includes(project._id.toString()))
                                { %>
                                <i class="fas fa-bookmark"></i>
                                <% } else { %>
                                <i class="far fa-bookmark"></i>
                                <% } %>
                            </button>
                        </form>
                        <% } %>
                    </div>
                    <p class="card-text"><%= project.description %></p>
                    <p class="card-text">
                        <small class="text-muted"
                            ><%= project.location %></small
                        >
                    </p>
                    <p class="card-text">
                        <% const deadlineDate = new Date(project.deadline);
                        const currentDate = new Date(); const timeDifference =
                        deadlineDate - currentDate; const daysLeft =
                        Math.ceil(timeDifference / (1000 * 60 * 60 * 24)); %>
                        <small class="text-muted">
                            <% if (daysLeft > 0) { %>
                            <i class="fas fa-clock"></i> <%= daysLeft %> days
                            left <% } else { %>
                            <span class="text-danger">Deadline passed</span>
                            <% } %>
                        </small>
                    </p>
                    <a
                        href="/projects/<%= project._id %>"
                        class="btn btn-primary"
                        >View</a
                    >
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

