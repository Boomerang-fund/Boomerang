                        <p class="card-text">${project.descriptionText}</p>
                        <a href="/projects/${project._id
                    }" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        `;
                container.insertAdjacentHTML("beforeend", projectHTML);
            });
        }
        document.getElementById("load-more").addEventListener("click", async () => {
            currentPage++;

            const data = await fetchProjects(currentPage);

            if (data && data.projects && data.projects.length > 0) {
                appendProjects(data.projects);

                // Hide the load button if the last page is reached
                if (currentPage >= data.totalPages) {
                    document.getElementById("load-more-container").style.display =
                        "none";
                }
            } else {
                console.error("No projects fetched or invalid response.");
                alert("Failed to load more projects. Please try again.");
            }
        });
    </script>