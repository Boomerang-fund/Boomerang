<% layout('layouts/boilerplate') %>

    <h1 class="mt-4">My Saved Projects</h1>

    <div class="container">
        <div class="row">
            <% projects.forEach(project=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="<%= project.images[0] ? project.images[0].url : 'default-image-url.jpg' %>"
                            class="card-img-top" alt="..." />
                        <div class="card-body">
                            <!-- Title and Bookmark in a Flex Container -->
                            <div style="
                            display: flex;
                            justify-content: space-between;
                            align-items: center;
                        ">
                                <h5 class="card-title" style="margin: 0">
                                    <%= project.titleText %>
                                </h5>
                                <% if (currentUser) { %>
                                    <form action="/projects/<%= project._id %>/toggleSave" method="POST"
                                        style="margin: 0">
                                        <button type="submit" class="btn btn-link p-0"
                                            style="font-size: 1rem; color: #007bff">
                                            <% if (currentUser.savedProjects &&
                                                currentUser.savedProjects.includes(project._id.toString())) { %>
                                                <i class="fas fa-bookmark"></i>
                                                <!-- Filled icon for saved -->
                                                <% } else { %>
                                                    <i class="far fa-bookmark"></i>
                                                    <!-- Unfilled icon for unsaved -->
                                                    <% } %>
                                        </button>
                                    </form>
                                    <% } %>
                            </div>
                            <p class="card-text">
                                <%= project.descriptionText %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= project.location %>
                                </small>
                            </p>
                            <p class="card-text">
                                <% // Calculate days left until deadline const deadlineDate=new Date(project.deadline);
                                    const currentDate=new Date(); const timeDifference=deadlineDate - currentDate; const
                                    daysLeft=Math.ceil(timeDifference / (1000 * 60 * 60 * 24)); %>
                                    <small class="text-muted">
                                        <% if (daysLeft> 0) { %>
                                            <i class="fas fa-clock"></i>
                                            <%= daysLeft %> days
                                                left <% } else { %>
                                                    <span class="text-danger">Deadline passed</span>
                                                    <% } %>
                                    </small>
                            </p>
                            <a href="/projects/<%= project._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- Script for AJAX Bookmark Toggle -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const saveIcons = document.querySelectorAll(".save-icon");

            saveIcons.forEach((icon) => {
                icon.addEventListener("click", async function (event) {
                    event.preventDefault();

                    const projectId = this.getAttribute("data-project-id");
                    const iconElement = this.querySelector("i");

                    try {
                        const response = await fetch(
                            `/projects/${projectId}/toggleSave`,
                            {
                                method: "POST",
                                headers: {
                                    "Content-Type": "application/json",
                                    "X-Requested-With": "XMLHttpRequest",
                                },
                            }
                        );
                        const result = await response.json();

                        // Toggle the icon based on the save status
                        if (result.status === "saved") {
                            iconElement.classList.remove("far");
                            iconElement.classList.add("fas");
                        } else if (result.status === "unsaved") {
                            iconElement.classList.remove("fas");
                            iconElement.classList.add("far");
                        }
                    } catch (error) {
                        console.error("Error toggling project save:", error);
                    }
                });
            });
        });
    </script>