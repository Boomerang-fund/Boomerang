<% layout('layouts/boilerplate') %>

<div id="map" style="width: 100%; height: 500px"></div>
<h1>Project Search</h1>

<!-- Search Form -->
<div class="container mt-4 mb-5">
    <form
        action="/search"
        method="GET"
        class="form-inline d-flex justify-content-center"
    >
        <input
            type="text"
            name="keyword"
            class="form-control mr-2"
            placeholder="Search for a project..."
            required
        />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

<!-- Search Results Information Message -->
<% if (keyword && projects) { %>
<div class="container text-center mt-4">
    <% if (projects.length > 0) { %>
    <p>
        Displaying <strong><%= projects.length %></strong> results for "<strong
            ><%= keyword %></strong
        >"
    </p>
    <% } else { %>
    <p>
        No projects found for "<strong><%= keyword %></strong>". Please try a
        different keyword.
    </p>
    <% } %>
</div>
<% } else { %>
<!-- Display a welcoming message if no search has been performed -->
<div class="container text-center mt-5">
    <h2>Welcome to Project Search</h2>
    <p>Enter a keyword above to search for projects.</p>
</div>
<% } %>

<!-- Search Results -->
<% if (projects && projects.length > 0) { %>
<div class="container">
    <div class="row">
        <% projects.forEach(project => { %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img
                    src="<%= project.images && project.images[0] ? project.images[0].url : 'https://res.cloudinary.com/dei5hbjfg/image/upload/v1730665603/Boomerang/ujp5lxrxohzvkutf5oos.jpg' %>"
                    class="card-img-top"
                    alt="<%= project.title %>"
                />
                <div class="card-body">
                    <h5 class="card-title"><%= project.title %></h5>
                    <p class="card-text"><%= project.description %></p>
                    <p class="card-text">
                        <small class="text-muted"
                            ><%= project.location %></small
                        >
                    </p>
                    <a
                        href="/projects/<%= project._id %>"
                        class="btn btn-primary"
                        >View</a
                    >
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<% } %>

<!-- Map JavaScript to Display Only Search Results -->
<script>
    const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
    const projects = { features: <%- JSON.stringify(projects.map(project => ({
        type: 'Feature',
        geometry: project.geometry,
        properties: {
            title: project.title,
            description: project.description,
            id: project._id
        }
    }))) %> };

    // Initialize map with filtered projects
    const mapElement = document.getElementById('map');
    if (projects.features.length > 0) {
        mapElement.style.display = 'block';
    } else {
        mapElement.style.display = 'none';
    }
</script>

<script src="/javascripts/clusterMap.js"></script>
