<% layout('layouts/boilerplate') %>

<div id="map" style="width: 100%; height: 500px"></div>
<h1 class="mt-4">Project Search</h1>

<!-- Search Form -->
<div class="container mt-4 mb-3">
    <form
        action="/search"
        method="GET"
        class="form-inline d-flex justify-content-center"
    >
        <input
            type="text"
            name="keyword"
            class="form-control mr-2"
            placeholder="Search for a project..."
            required
        />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

<!-- Search Results Information Message -->
<% if (keyword && projects) { %>
<div class="container text-center mt-4 mb-5">
    <% if (projects.length > 0) { %>
    <p>
        Displaying <strong><%= projects.length %></strong> results for "<strong
            ><%= keyword %></strong
        >"
    </p>
    <% } else { %>
    <p>
        No projects found for "<strong><%= keyword %></strong>". Please try a
        different keyword.
    </p>
    <% } %>
</div>
<% } else { %>
<!-- Display a welcoming message if no search has been performed -->
<div class="container text-center mt-5">
    <h2>Welcome to Project Search</h2>
    <p>Enter a keyword above to search for projects.</p>
</div>
<% } %> <% if (projects && projects.length > 0) { %>
<div class="container">
    <div class="row">
        <% projects.forEach(project => { %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img
                    src="<%= project.images && project.images[0] ? project.images[0].url : 'default-image-url.jpg' %>"
                    class="card-img-top"
                    alt="..."
                />
                <div class="card-body">
                    <!-- Title and Bookmark in a Flex Container -->
                    <div
                        style="
                            display: flex;
                            justify-content: space-between;
                            align-items: center;
                        "
                    >
                        <h5 class="card-title" style="margin: 0">
                            <%= project.title %>
                        </h5>
                        <% if (currentUser) { %>
                        <form
                            action="/projects/<%= project._id %>/toggleSave?keyword=<%= keyword %>"
                            method="POST"
                            style="margin: 0"
                        >
                            <button
                                type="submit"
                                class="btn btn-link p-0"
                                style="font-size: 1rem; color: #007bff"
                            >
                                <% if (currentUser.savedProjects &&
                                currentUser.savedProjects.includes(project._id.toString()))
                                { %>
                                <i class="fas fa-bookmark"></i>
                                <!-- Filled icon for saved -->
                                <% } else { %>
                                <i class="far fa-bookmark"></i>
                                <!-- Unfilled icon for unsaved -->
                                <% } %>
                            </button>
                        </form>
                        <% } %>
                    </div>
                    <p class="card-text"><%= project.description %></p>
                    <p class="card-text">
                        <small class="text-muted"
                            ><%= project.location %></small
                        >
                    </p>
                    <p class="card-text">
                        <% // Calculate days left until deadline const
                        deadlineDate = new Date(project.deadline); const
                        currentDate = new Date(); const timeDifference =
                        deadlineDate - currentDate; const daysLeft =
                        Math.ceil(timeDifference / (1000 * 60 * 60 * 24)); %>
                        <small class="text-muted">
                            <% if (daysLeft > 0) { %>
                            <i class="fas fa-clock"></i> <%= daysLeft %> days
                            left <% } else { %>
                            <span class="text-danger">Deadline passed</span>
                            <% } %>
                        </small>
                    </p>
                    <a
                        href="/projects/<%= project._id %>"
                        class="btn btn-primary"
                        >View</a
                    >
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<% } %>

