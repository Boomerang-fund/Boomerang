<% layout('layouts/boilerplate') %>
<div class="container">
    <h1 class="text-center">Your Drafts</h1>
    <div class="row">
        <% if (drafts.length > 0) { %> <% drafts.forEach(function(draft) { %>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= draft.title || "Untitled Draft" %>
                    </h5>
                    <p class="card-text">
                        <strong>Last Saved:</strong> <%=
                        draft.lastSavedAt.toLocaleString() %><br />
                        <strong>Location:</strong> <%= draft.location || "Not specified" %>
                    </p>
                    <a href="/projects/new?draftId=<%= draft._id %>" class="btn btn-primary">Resume</a>
                    <form
                        method="POST"
                        action="/projects/drafts/<%= draft._id %>?_method=DELETE"
                        class="d-inline"
                    >
                        <button type="submit" class="btn btn-danger">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <% }); %> <% } else { %>
        <div class="col-12">
            <p class="text-center">You have no saved drafts.</p>
            <a href="/projects/new" class="btn btn-success"
                >Create New Project</a
            >
        </div>
        <% } %>
    </div>
</div>
