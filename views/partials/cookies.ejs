<% if (!cookiesBool) { %>
    <!-- Cookie Consent Popup -->
    <div id="cookieConsent"
        class="alert alert-light shadow-lg position-fixed bottom-0 start-50 translate-middle-x text-center p-3 rounded"
        style="max-width: 600px; z-index: 1050; background-color: rgba(255, 255, 255, 0.95); border: 1px solid #ddd; opacity: 1; 
        transition: opacity 0.5s ease-in-out;">
        <p class="mb-2">
            <%= __('cookies.content') %>
        </p>
        <button id="accept" class="btn btn-primary btn-sm">Accept</button>
        <button id="decline" class="btn btn-secondary btn-sm ms-2">Decline</button>
    </div>

    <!-- JavaScript to Handle Cookie Consent -->
    <script src="javascripts/cookies_ejs/cookiesHandler.js"></script>
   
