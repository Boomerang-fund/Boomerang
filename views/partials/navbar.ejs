<form id="languageForm" action="/language" method="POST" style="display: none">
    <input type="hidden" name="language" id="languageInput" />
</form>
<form id="currencyForm" action="/currency" method="POST" style="display: none">
    <input type="hidden" name="currency" id="currencyInput" />
</form>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div
        class="container"
        style="height: 90px; display: flex; align-items: center"
    >
        <!-- Brand -->
        <a class="navbar-brand" href="/projects" style="margin-right: 20px">
            <img
                src="/images/Boomerang Logo.png"
                alt="Boomerang Logo"
                style="height: 20px; width: auto; margin-top: -7px"
            />
        </a>

        <!-- Toggle Button for Mobile -->
        <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup"
            aria-expanded="false"
            aria-label="<%= __('navbar.toggle') %>"
        >
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Content -->
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <!-- Left-Side Navigation Links -->
            <div class="navbar-nav me-auto">
                <a class="nav-link" href="/projects">
                    <%= __('navbar.projects') %>
                </a>
                <a class="nav-link" href="/search">
                    <%= __('navbar.search') %>
                </a>
            </div>

            <!-- Search Bar -->
            <form
                action="/search"
                method="GET"
                class="d-flex"
                style="<%= !currentUser ? 'width: 600px;' : 'width: 600px;' %> margin-left: 20px; margin-right: 20px"
            >
                <div class="position-relative w-100">
                    <input
                        type="text"
                        name="keyword"
                        class="form-control shadow-sm"
                        placeholder="<%= __('navbar.searchPlaceholder') %>"
                        required
                        style="padding-left: 2.5rem"
                    />
                    <span
                        class="position-absolute text-muted"
                        style="
                            top: 50%;
                            left: 10px;
                            transform: translateY(-50%);
                            pointer-events: none;
                        "
                    >
                        <i class="fas fa-search"></i>
                    </span>
                </div>
            </form>

            <!-- Right-Side Links -->
            <div class="navbar-nav d-flex align-items-center">
                <!-- Start Project Button -->
                <a
                    class="btn btn-primary me-3"
                    href="/projects/new"
                    style="font-weight: 600"
                >
                    <%= __('navbar.startProject') %>
                </a>
                <!-- Language Dropdown -->
                <div class="dropdown ms-3">
                    <button
                        class="btn btn-outline-secondary dropdown-toggle"
                        type="button"
                        id="languageDropdown"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                    >
                        <%= selectedLanguage.toUpperCase() %>
                    </button>
                    <ul
                        class="dropdown-menu"
                        aria-labelledby="languageDropdown"
                    >
                        <% availableLanguages.forEach(lang=> { %>
                        <li>
                            <a
                                class="dropdown-item"
                                href="#"
                                onclick="setLanguage('<%= lang %>')"
                            >
                                <%= lang.toUpperCase() %>
                            </a>
                        </li>
                        <% }) %>
                    </ul>
                </div>

                <!-- Currency Dropdown -->
                <div class="dropdown ms-3">
                    <button
                        class="btn btn-outline-secondary dropdown-toggle"
                        type="button"
                        id="currencyDropdown"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                    >
                        <%= selectedCurrency.toUpperCase() %>
                    </button>
                    <ul
                        class="dropdown-menu"
                        aria-labelledby="currencyDropdown"
                    >
                        <% availableCurrencies.forEach(cur=> { %>
                        <li>
                            <a
                                class="dropdown-item"
                                href="#"
                                onclick="setCurrency('<%= cur %>')"
                            >
                                <%= cur.toUpperCase() %>
                            </a>
                        </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
            <% if (!currentUser) { %>
            <!-- Login Link -->
            <a
                href="/login"
                class="btn btn-outline-primary px-3 py-1 ms-3"
                style="
                    border-radius: 5px;
                    font-weight: 600;
                    text-decoration: none;
                "
            >
                <%= __('navbar.login') %>
            </a>
            <% } else { %>
            <!-- Profile Dropdown -->
            <div class="dropdown ms-3">
                <button
                    class="btn btn-secondary dropdown-toggle d-flex align-items-center"
                    type="button"
                    id="profileDropdown"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                    style="
                        background: none;
                        border: none;
                        color: inherit;
                        padding: 0;
                    "
                >
                    <!-- Profile Icon -->
                    <img
                        src="https://images.rawpixel.com/image_png_800/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDIzLTAxL3JtNjA5LXNvbGlkaWNvbi13LTAwMi1wLnBuZw.png"
                        alt="Profile"
                        style="
                            width: 30px;
                            height: 30px;
                            border-radius: 50%;
                            object-fit: cover;
                        "
                    />
                </button>
                <ul
                    class="dropdown-menu dropdown-menu-end"
                    aria-labelledby="profileDropdown"
                >
                    <li>
                        <a class="dropdown-item" href="/projects/my-projects">
                            <%= __('navbar.myProjects') %>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="/projects/library">
                            <%= __('navbar.library') %>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider" />
                    </li>
                    <li>
                        <a class="dropdown-item text-danger" href="/logout">
                            <%= __('navbar.logout') %>
                        </a>
                    </li>
                </ul>
            </div>
            <% } %>
        </div>
    </div>
</nav>
