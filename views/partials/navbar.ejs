        margin-right: 0.3rem;
    }
</style>

<script>
    function setLanguage(language) {
        // Set the selected language in the hidden input field
        document.getElementById("languageInput").value = language;

        // Submit the hidden form
        document.getElementById("languageForm").submit();
    }
    function setCurrency(currency) {
        // Set the selected currency in the hidden input field
        document.getElementById("currencyInput").value = currency;

        // Submit the hidden form
        document.getElementById("currencyForm").submit();
    }
</script>
